# Path
# base
export PATH="$HOME/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/X11/bin"

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

# postgres
export PATH="/Applications/Postgres.app/Contents/MacOS/bin:$PATH"
export PATH="/Applications/Postgres.app/Contents/Versions/9.4/bin:$PATH"

# Set Java path (for Selenium)
export JAVA_HOME="/Library/Internet Plug-Ins/JavaAppletPlugin.plugin/Contents/Home"
if [ ! -d "$JAVA_HOME" ]
then
    export JAVA_HOME=$(/usr/libexec/java_home >/dev/null 2>&1)
fi

# Set Android path (for Android builds)
export ANDROID_HOME=/usr/local/bin/android-sdk
export ANDROID_SDK_ROOT=/usr/local/share/android-sdk

# Golang
export PATH="$HOME/go/bin:$PATH"
